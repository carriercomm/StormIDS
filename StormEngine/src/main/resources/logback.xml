<configuration>
    <appender name="reportsLog" class="ch.qos.logback.core.FileAppender">
        <File>logs/reports.log</File>
        <encoder>
            <pattern>%d{yyyy/MM/dd HH:mm:ss.SSS} %-5p [%c] - %m%n</pattern>
        </encoder>
    </appender>
    <appender name="errorsLog" class="ch.qos.logback.core.FileAppender">
        <File>logs/StormIDS.log</File>
        <encoder>
            <pattern>%d{yyyy/MM/dd HH:mm:ss.SSS} %-5p [%c] - %m%n</pattern>
        </encoder>
    </appender>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <Target>System.out</Target>
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSS} %-5p [%c] - %m%n</pattern>
        </encoder>
    </appender>
    <logger name="reportsLogger" additivity="false" level="TRACE">
        <appender-ref ref="reportsLog"/>
    </logger>
    <logger name="errorsLog" additivity="false" level="ERROR">
        <appender-ref ref="errorsLog"/>
    </logger>
    <root level="DEBUG">
        <appender-ref ref="console"/>
    </root>
</configuration>